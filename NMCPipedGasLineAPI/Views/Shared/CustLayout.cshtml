<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>NMC</title>
    <link rel="icon" href="~/img/favicon.png" />
    <!-- Bootstrap core CSS-->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- fonts for this template-->
    <link href="~/vendor/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/Content/style.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css"
          rel="stylesheet" type="text/css" />
   
</head>
<body id="page-top">

    <div id="wrapper" style="height:100vh;">

        <div id="topheader">

            @if (Session["user"] != null)
            {
                <ul class="sidebar navbar-nav">
                    <li class="nav-item text-center logoBox">
                        <span class="navbar-brand mr-1"><img src="~/img/logo.svg" alt="NMC" /></span>
                    </li>
                    <li class="id-details">
                        <span><strong>Customer ID:<br></strong>@Session["CustomerNumber"].ToString()</span>
                    </li>

                    <li class="id-details customer-name-bottom">
                        <span><strong>Customer Name:</strong><br>@Session["Name"].ToString()</span>
                    </li>

                    <ul class="list-group">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Payment/PaymentHistory">
                                <span>Payment History</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="~/Payment/BillHistory">
                                <span>Bill History</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Payment/ChangesPassword">
                                <span>Change Password</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Payment/CustomerReading1">
                                <span>Reading</span>
                            </a>
                        </li>

                        @*<li class="nav-item">
                                <a class="nav-link" href="~/Payment/CustomerReadingHistory1">
                                    <span>Reading2</span>
                                </a>
                            </li>*@

                        @*<li class="nav-item">
                                <a class="nav-link" href="~/Payment/ReadingHistoryList">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Reading History</span>
                                </a>
                            </li>*@



                    </ul>

                    <li class="nav-item mb-0 bg-danger">
                        @Html.ActionLink("Logout", "LogOff", "Payment", "", new { @class = "nav-link text-white py-1 border-bottom-0", onclick = "return confirm('Do you really want to logout');" })
                    </li>

                </ul>
            }

        </div>
        <div id="content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-sm-12 col-12">

                        <div class="mobile-toggle text-right"><i class="fa fa-bars" aria-hidden="true"></i></div>

                        <div class="bg-light p-3 card-theme-border">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2021</span>
                </div>
            </div>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/Scripts/sb-admin.min.js"></script>
    <script src="~/Scripts/ASPSnippets_Pager.min.js"></script>

    <script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js"
            type="text/javascript"></script>
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript"
            src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <script>
        jQuery(function ($) {
            $(".sidebar li a")
                .click(function (e) {
                    var link = $(this);

                    var item = link.parent("li");

                    if (item.hasClass("active")) {
                        item.removeClass("active").children("a").removeClass("active");
                    } else {
                        item.addClass("active").children("a").addClass("active");
                    }

                    if (item.children("ul").length > 0) {
                        var href = link.attr("href");
                        link.attr("href", "#");
                        setTimeout(function () {
                            link.attr("href", href);
                        }, 300);
                        e.preventDefault();
                    }
                })
                .each(function () {
                    var link = $(this);
                    if (link.get(0).href === location.href) {
                        link.addClass("active").addClass("active");
                        return false;
                    }
                });
        });

        $(document).ready(function () {
            $('.mobile-toggle').click(function () {
                $('.sidebar').toggleClass('active')
            })
        })

    </script>




</body>

</html>
